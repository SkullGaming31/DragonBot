{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": ["warn", "tab"],
        "linebreak-style": ["error", "windows"],
        "quotes": ["error", "single"],
        "no-case-declarations": "off",
        "semi": [ "error", "always" ],
        "no-undef": "off",
        "no-unused-vars": "off",
        "no-inner-declarations": "off",
        "arrow-parens": "warn"
    }
}
